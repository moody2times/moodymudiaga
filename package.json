{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "My portfolio website",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "node-sass --watch sass/style.scss -o css/",
    "server": "live-server",
    "start": "npm-run-all --parallel watch server",

    "prefix": "postcss --use autoprefixer -b 'last versions' css/style.css -o css/style.prefix.css",
    "compress": "node-sass css/style.prefix.css css/style.min.css --output-style compressed",
    "build": "npm-run-all prefix compress"
  },
  "author": "Moody Mudiaga",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.0.1",
    "live-server": "^1.2.1",
    "node-sass": "^4.14.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.0",
    "postcss-cli": "^8.1.0"
  }
}
